<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DairyFarm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DairyFarm.styles.css" asp-append-version="true" />
     <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
     <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Cattle" asp-action="Index">DairyFarm</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              <div class="navbar-collapse collapse">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Cattle" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Cattle" asp-action="Cattle">Cattle</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="MaintainCattle" asp-action="Add">Add Cattle</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="MaintainDiet" asp-action="MaintainDiet">Maintain Diet</a>
        </li>
    <li class="nav-item">
    <a class="nav-link" asp-area="" asp-controller="Alert" asp-action="Alert">
        <div class="alert-icon-container">
            <ion-icon name="notifications-outline" class="alert-icon"></ion-icon>
        </div>
    </a>
</li>

        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login">Logout</a>
        </li>
    </ul>
</div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DairyFarm - <a href="#">All Rights Reserved</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
